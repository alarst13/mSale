<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.SignUp"
    android:background="@drawable/pink_background">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="5dp"
        android:text="mSale"
        android:textColor="#ffff00"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/create_account_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="Create Your mSale account"
        android:textColor="#ff3a3a"
        android:textSize="25sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/sign_up_first"
        android:layout_below="@id/create_account_txt"
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="6">
        <EditText
            android:id="@+id/sign_up_username_edt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="2.5dp"
            android:layout_weight="3"
            android:background="@drawable/first_edt_selector"
            android:hint="Username"
            android:paddingLeft="15dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textSize="15sp" />
        <EditText
            android:id="@+id/sign_up_phone_number_edt"
            android:hint="Phone number"
            android:textSize="15sp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="15dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:inputType="phone"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/first_edt_selector"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/sign_up_second"
        android:layout_below="@id/sign_up_first"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="6">
        <EditText
            android:id="@+id/sign_up_password_edt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="2.5dp"
            android:layout_weight="3"
            android:background="@drawable/first_edt_selector"
            android:hint="Password"
            android:inputType="textPassword"
            android:paddingLeft="15dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textSize="15sp" />
        <EditText
            android:id="@+id/sign_up_confirming_password_edt"
            android:hint="Confirm"
            android:textSize="15sp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="15dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:inputType="textPassword"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/first_edt_selector"/>
    </LinearLayout>
    <Button
        android:id="@+id/sign_up_btn"
        android:layout_below="@id/sign_up_second"
        android:layout_width="75dp"
        android:layout_height="30dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:text="Submit"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textColor="#ffff"
        android:background="@drawable/sign_in_btn"/>
</RelativeLayout>