<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.SignInPage"
    android:background="@drawable/pink_background">

    <TextView
        android:id="@+id/first"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please sign in below"
        android:textStyle="bold"
        android:fontFamily="cursive"
        android:textSize="20sp"/>
    <LinearLayout
        android:id="@+id/sign_in"
        android:layout_below="@id/first"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="6">

        <EditText
            android:id="@+id/sign_in_username_edt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="2.5dp"
            android:layout_weight="3"
            android:background="@drawable/first_edt_selector"
            android:hint="Username"
            android:paddingLeft="15dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textSize="15sp" />
        <EditText
            android:id="@+id/sign_in_password_edt"
            android:hint="Password"
            android:textSize="15sp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="15dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:layout_weight="3"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/first_edt_selector"/>
    </LinearLayout>
    <Button
        android:id="@+id/sign_in_btn"
        android:layout_below="@id/sign_in"
        android:layout_width="75dp"
        android:layout_height="30dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:text="Log In"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textColor="#ffff"
        android:background="@drawable/sign_in_btn"/>
    <TextView
        android:id="@+id/sign_up_txt_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sign_in_btn"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:textStyle="bold"
        android:fontFamily="cursive"
        android:textSize="15sp"
        android:textColor="#5694ea"
        android:clickable="true"
        android:text="If you have not signed up yet please click here"/>
</RelativeLayout>