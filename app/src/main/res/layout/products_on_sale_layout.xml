<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:weightSum="10"
        android:clickable="true">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical"
            android:weightSum="6">

            <TextView
                android:id="@+id/description_txt_products_on_sale"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:paddingLeft="5dp">
            </TextView>
            <TextView
                android:id="@+id/price_txt_products_on_sale"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:paddingLeft="5dp"/>
            <TextView
                android:id="@+id/off_price_txt_products_on_sale"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:paddingLeft="5dp"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/products_on_sale_layout_image_view"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_marginTop="5dp"
            android:layout_weight="7"></ImageView>
    </LinearLayout>

</RelativeLayout>